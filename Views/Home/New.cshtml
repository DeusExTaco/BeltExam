@{
    ViewData["Title"] = "New Event";
}

@model Event

<div>
    <div class="row">
        <div class="col-md-9">
            <h2>Hobby Hub</h2>
        </div>
        <div class="col-md-3 text-right">
            <a href="/dashboard">Home</a> | <a href="/logout"> Logout</a>
        </div>
    </div>
    <form asp-action="AddEvent" asp-controller="Home" method="post">

        <div class="form-group">
            <input type="hidden" asp-for="UserId" value="@ViewBag.User.UserId" class="form-control">
        </div>

        <div class="form-group">
            <small>
                <span asp-validation-for="EventTitle" class="form-text text-danger"></span>
            </small>
            <label asp-for="EventTitle">Hobby Name</label>
            <input type="text" asp-for="EventTitle" class="form-control">
        </div>

        <div class="form-group">
            <small>
                <span asp-validation-for="Description" class="form-text text-danger"></span>
            </small>
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        </div>

        <button type="submit" class="btn btn-primary mb-2">Create</button>

        <a href="/dashboard" class="btn btn-primary mb-2">Cancel</a>
    </form>
</div>