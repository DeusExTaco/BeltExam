@model User

<h2>Register</h2>
<form asp-action="RegisterUser" asp-controller="Home" method="POST">
    <div class="form-group">
        <small>
            <span asp-validation-for="FirstName" class="form-text text-danger"></span>
        </small>
        <label asp-for="FirstName">First Name</label>
        <input type="text" asp-for="FirstName" class="form-control" placeholder="First name">
    </div>
    <div class="form-group">
        <small>
            <span asp-validation-for="LastName" class="form-text text-danger"></span>
        </small>
        <label asp-for="LastName">Last Name</label>
        <input type="text" asp-for="LastName" class="form-control" placeholder="Last name">
    </div>
    <div class="form-group">
        <small>
            <span asp-validation-for="Email" class="form-text text-danger"></span>
        </small>
        <label asp-for="Email">Email Address</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Enter email">
    </div>
    <div class="form-group">
        <small>
            <span asp-validation-for="Birthday" class="form-text text-danger"></span>
        </small>
        <label asp-for="Birthday">Birthday</label>
        <input type="date" asp-for="Birthday" class="form-control">
    </div>
    <div class="form-group">
        <small>
            <span asp-validation-for="Password" class="form-text text-danger"></span>
        </small>
        <label asp-for="Password">Password</label>
        <input type="password" asp-for="Password" class="form-control" aria-describedby="passwordHelp" placeholder="****">
        <small id="passwordHelp" class="form-text text-muted">Your password must be 8-20 characters long, contain one upper case and one lower case letter, one number, and one special character.</small>
    </div>
    <div class="form-group">
        <small>
            <span asp-validation-for="Confirm" class="form-text text-danger"></span>
        </small>
        <label asp-for="Confirm">Confirm Password</label>
        <input type="password" asp-for="Confirm" class="form-control" placeholder="****">
    </div>
    <input type="submit" value="Submit" class="btn btn-primary">
</form>